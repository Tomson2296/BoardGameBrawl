@page "{UserName}"
@model BoardGameBrawl.Areas.Identity.Pages.AppUser.UserBGGCollectionModel
@{
    ViewData["Title"] = "Check User's BGG collection";
}

<div class="container-fluid">

    <div class="row mb-3">
        <h3> @ViewData["title"] </h3>
    </div>

    @if (Model.ApplicationUser.BGGUsername == null)
    {
        <div class="row text-center">
            <h3> That user doesn't have his/her account connected to BGG Profile </h3>
        </div>
    }
    else
    {
        <div class="container">
            <div class="d-flex flex-row flex-wrap text-center">
                @for (int i = 0; i < Model.UserBoardGameCollection.TotalItems; i++)
                {
                    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 mb-3 p-2">
                        <a asp-area="Identity" asp-page="/Boardgame/Index" asp-route-BoardgameID="@Model.UserBoardGameCollection.Games[i].ObjectId">
                            <div class="card">
                                <img src="@Model.UserBoardGameCollection.Games[i].Image" class="card-img-top img-fit" alt="" width="200" height="200">
                                <div class="card-body">
                                    <h6 class="card-title text-truncate"> @Model.UserBoardGameCollection.Games[i].Name.GameName </h6>
                                    <p class="card-text"><small class="text-muted">@Model.UserBoardGameCollection.Games[i].YearPublished</small></p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    }
</div>
<style>
    a {
        text-decoration: none;
        color: black;
    }
    .img-fit {
        object-fit: contain;
    }
</style>