@using BoardGameBrawl.Data.Models
@using static BoardGameBrawl.Areas.Identity.Pages.Boardgame.IndexModel

<div class="row text-center mb-4">
    <div class="col-8 justify-content-center">
        <img src="@Model.Boardgame.GameInfo.Image" height="350" width="350" class="img-fluid img-thumbnail" />
        <h3> @Model.Boardgame.GameInfo.Name.Value </h3>
    </div>
    <div class="col-4 d-flex align-items-center align-self-center justify-content-around">
        <div class="d-flex flex-column align-items-center justify-content-center">
            <img src="~/img/grandtrophy.png" height="64" width="64" alt="grandtrophy" />
            <br />
            <h3> @Model.Boardgame.GameInfo.Statistics.Ratings.Ranks.Rank[0].FriendlyName: @Model.Boardgame.GameInfo.Statistics.Ratings.Ranks.Rank[0].Value </h3>
        </div>
        <div class="d-flex flex-column align-items-center justify-content-center">
            <img src="~/img/trophy.png" height="64" width="64" alt="trophy" />
            <br />
            <h3> @Model.Boardgame.GameInfo.Statistics.Ratings.Ranks.Rank[1].FriendlyName: @Model.Boardgame.GameInfo.Statistics.Ratings.Ranks.Rank[1].Value </h3>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="d-inline-flex align-items-center justify-content-between text-center">
        <div>
            <a asp-page="Index" asp-route-BoardgameID="@Model.Boardgame.GameInfo.Id">
                Description
            </a>
        </div>
        <div>
            Matches
        </div>
        <div>
            Tournaments 
        </div>
        <div>
            <a asp-page="Moderators" asp-route-BoardgameID="@Model.Boardgame.GameInfo.Id">
                Moderators
            </a>
        </div>
        @if (!Model.IsBoardgameUsersfavourite)
        {
            <div>
                <a asp-page="AddToFavourite" asp-route-BoardgameID="@Model.Boardgame.GameInfo.Id">
                    Add to favourite
                </a>
            </div>
        }
        else
        {
            <div>
                <a asp-page="RemoveFromFavourite" asp-route-BoardgameID="@Model.Boardgame.GameInfo.Id">
                    Remove from favourite
                </a>
            </div>
        }
    </div>
</div>

<style>
    a {
        text-decoration: none;
        color: black;
    }
</style>