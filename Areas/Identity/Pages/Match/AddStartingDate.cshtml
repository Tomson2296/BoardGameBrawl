@page
@model BoardGameBrawl.Areas.Identity.Pages.Match.AddStartingDateModel
@{
    ViewData["Title"] = "Add Starting Date";
}

<div class="container-fluid">
    <form method="post" name="date-picker" id="date-picker-form">
        <div class="row">
            <div class="col-6">
                <div class="basic-container p-4 mb-3">
                    <div class="d-flex flex-column align-items-center justify-content-center text-center">
                        <label asp-for="Chosen_StartingDate"> <strong> Choose Starting Date </strong> </label>
                        <br />
                        <div class="form-floating mb-3">
                            <input asp-for="Chosen_StartingDate" type="date" id="ChosenStartingDate" name="ChosenStartingDate">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="basic-container p-4 mb-3">
                    <div class="d-flex flex-column align-items-center justify-content-center text-center">
                        <label asp-for="Chosen_Hour"> <strong> Choose Starting Hour </strong> </label>
                        <br />
                        <div class="form-floating mb-3">
                            <input asp-for="Chosen_Hour" type="time" step="1800" id="ChosenHour" name="ChosenHour" class="timer" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="d-flex flex-row align-items-center justify-content-center text-center">
                    <button type="submit" class="btn btn-secondary w-50"> Choose Starting Date </button>
                </div>
            </div>
        </div>
    </form>
</div>
<style>
    .basic-container {
        width: 100%;
        background-color: white;
        border: 2px solid black;
    }
</style>